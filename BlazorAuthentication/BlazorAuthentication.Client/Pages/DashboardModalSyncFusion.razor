@rendermode InteractiveAuto
@using BlazorAuthentication.Client.Model
@using Syncfusion.Blazor.Buttons
@using Syncfusion.Blazor.Cards
@using Syncfusion.Blazor.Charts
@inject DialogService DialogService

<SfCard>
    <SfChart>
        <ChartPrimaryXAxis ValueType="Syncfusion.Blazor.Charts.ValueType.Category">
            <ChartAxisMajorGridLines Width="0"></ChartAxisMajorGridLines>
            <ChartAxisLabelStyle Size="11px"></ChartAxisLabelStyle>
        </ChartPrimaryXAxis>
        <ChartPrimaryYAxis Minimum="0">
            <ChartAxisMajorTickLines Width="0"></ChartAxisMajorTickLines>
            <ChartAxisLineStyle Width="0"></ChartAxisLineStyle>
            <ChartAxisLabelStyle Size="11px"></ChartAxisLabelStyle>
        </ChartPrimaryYAxis>
        <ChartSeriesCollection>
            <ChartSeries DataSource="@conformidades" XName="Day" YName="Fornecedor" Name="Fornecedor" Fill="orange" Type="ChartSeriesType.Column">
                <ChartMarker>
                    <ChartDataLabel Visible="true" Position=" Syncfusion.Blazor.Charts.LabelPosition.Middle">
                        <ChartDataLabelFont Color="#FFFFFF"></ChartDataLabelFont>
                    </ChartDataLabel>
                </ChartMarker>
            </ChartSeries>
            <ChartSeries DataSource="@conformidades" XName="Day" YName="Contagem" Name="Contagem" Fill="blue" Type="ChartSeriesType.Column">
                <ChartMarker>
                    <ChartDataLabel Visible="true" Position="Syncfusion.Blazor.Charts.LabelPosition.Middle">
                        <ChartDataLabelFont Color="#FFFFFF"></ChartDataLabelFont>
                    </ChartDataLabel>
                </ChartMarker>
            </ChartSeries>
        </ChartSeriesCollection>
    </SfChart>
</SfCard>
<SfButton CssClass="e-flat e-light" IconCss="e-icons e-keyboard-return" Content="Voltar" Width="auto" Height="40px" Style="margin-left: auto; max-width: 100%; padding: 10px 20px; border-radius: 10px; margin-top: 20px;" OnClick="@Exit">
</SfButton>
@code {
    [Parameter]
    public List<Conformidades> conformidades { get; set; }

    private void Exit()
    {
        DialogService.Close(null);
    }
}
