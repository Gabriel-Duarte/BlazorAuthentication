@rendermode InteractiveServer



<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">

        <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0">
            <RadzenImage Path="images/Logomobilize.png" Style="width: 150px; cursor: pointer;" />
        </RadzenStack>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="counter">
                <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span> Counter
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="counter2">
                <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span> Counter 2
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="weather">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Weather
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="dashboard">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Dashboard
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="dashboardSyncfusion">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Dashboard Syncfusion
            </NavLink>
        </div>
        
        <div class="nav-item px-3">
            <NavLink class="nav-link d-flex align-items-center justify-content-between" @onclick="ToggleSubNav">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span>
                <span>Usuarios</span>
                <span class="bi @(expandSubNav ? "bi-caret-down-fill" : "bi-caret-right-fill")" aria-hidden="true" style="position: relative; top: -13px;"></span>
            </NavLink>


            @if (expandSubNav)
            {
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="userindexauto">
                        <span aria-hidden="true">userindexauto</span>
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="userindexServer">
                        <span aria-hidden="true">userindexServer</span>
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="userindexWebAssembly">
                        <span aria-hidden="true">userindexWebAssembly</span>
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="userindexSf">
                        <span aria-hidden="true">user SF</span>
                    </NavLink>
                </div>
                
            }
        </div>
    </nav>
</div>


@code {
    private bool expandSubNav;
    private string icone;

    private void ToggleSubNav()
    {
        expandSubNav = !expandSubNav;
    }
}